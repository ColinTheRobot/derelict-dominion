<!DOCTYPE html>
<html>
<head>
  <title>DerelictDominion</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="page">
   <header class="site-header">
      <div class="row">
         <div class="grid-full">
            <h1><%= link_to 'Derelict Dominion', root_path %></h1>
            <% if current_user %>
            <p><%=current_user.email%></p>
              <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'logout-button'  %>
              <%else%>
              <%= link_to "Login", new_user_session_path, :class => 'btn btn-secondary login-button' %>
              <%end%>
         </div>
      </div>
   </header>
   <%= yield %>
</div>

</body>
</html>
